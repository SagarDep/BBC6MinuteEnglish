<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paranoid.mao.bbclearningenglish">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="com.paranoid.mao.bbclearningenglish.singleton.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.paranoid.mao.bbclearningenglish.list.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.paranoid.mao.bbclearningenglish.article.ArticleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:launchMode="singleTask"
            android:parentActivityName="com.paranoid.mao.bbclearningenglish.list.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.paranoid.mao.bbclearningenglish.list.MainActivity" />
        </activity>
        <activity android:name="com.paranoid.mao.bbclearningenglish.settings.SettingActivity"
            android:label="@string/setting"/>

        <provider
            android:name="com.paranoid.mao.bbclearningenglish.data.BBCContentProvider"
            android:authorities="com.paranoid.mao.bbclearningenglish"
            android:exported="false" />

        <service
            android:name="com.paranoid.mao.bbclearningenglish.sync.BBCSyncArticleIntentService"
            android:exported="false" />
        <service
            android:name="com.paranoid.mao.bbclearningenglish.sync.BBCSyncContentListIntentService"
            android:exported="false" />
        <service
            android:name="com.paranoid.mao.bbclearningenglish.article.AudioPlayService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.paranoid.mao.bbclearningenglish.sync.ScheduleSyncJobService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE">
        </service>
    </application>

</manifest>