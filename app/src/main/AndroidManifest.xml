<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paranoid.mao.bbclearningenglish">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".singleton.MyApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".list.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".article.ArticleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:launchMode="singleTask"
            android:parentActivityName=".list.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.paranoid.mao.bbclearningenglish.list.MainActivity" />
        </activity>
        <activity
            android:name=".settings.SettingActivity"
            android:label="@string/setting" />

        <provider
            android:name=".data.BBCContentProvider"
            android:authorities="com.paranoid.mao.bbclearningenglish"
            android:exported="false" />

        <service
            android:name=".sync.BBCSyncArticleIntentService"
            android:exported="false" />
        <service
            android:name=".sync.BBCSyncContentListIntentService"
            android:exported="false" />
        <service
            android:name=".article.AudioPlayService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".sync.BBCSyncJobService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
        <service
            android:name=".sync.SyncVocabularyIntentService"
            android:exported="false"/>
    </application>

</manifest>