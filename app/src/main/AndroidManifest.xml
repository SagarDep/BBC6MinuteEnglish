<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mao.bbc6minuteenglish">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".cache.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ContentListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArticleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:parentActivityName=".ContentListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ContentListActivity" />
        </activity>
        <activity android:name=".SettingActivity"
            android:label="@string/setting"/>

        <provider
            android:name=".data.BBCContentProvider"
            android:authorities="com.example.mao.bbc6minuteenglish"
            android:exported="false" />

        <service
            android:name=".sync.BBCSyncArticleIntentService"
            android:exported="false" />
        <service
            android:name=".sync.BBCSyncContentListIntentService"
            android:exported="false" />
        <service
            android:name=".AudioPlayService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".sync.ScheduleSyncJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
    </application>

</manifest>